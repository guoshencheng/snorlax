[
  {
    "name"        : "snorlax",
    "script"      : "./bin/www",
    "watch"       : false,
    "instances"   : "1",
    "exec_mode"   : "cluster",
    "env": {
      "NODE_ENV": "production",
      "PORT": "3100"
    },
    "node_args": ["--inspect=0.0.0.0:9000"],
    "out_file": "./logs/app.log",
    "error_file": "./logs/app.log",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm Z"
  },
